<?xml version="1.0" encoding="utf-8"?><GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView

        android:id="@+id/imageViewFlag"
        android:layout_width="80dp"
        android:layout_height="70dp"

        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:contentDescription="description"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/medecin"
        tools:srcCompat="@drawable/medecin" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginLeft="12sp"
        android:contentDescription="description"
        android:textColor="#1E90FF"
        android:textSize="20sp"
        android:layout_marginStart="10sp" />


    <TextView
        android:id="@+id/specialite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:textColor="#4B0082"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/adresse"
        android:layout_width="198dp"
        android:layout_height="28dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:textColor="#4B0082"
        android:textSize="12sp" />

    <Button
        android:id="@+id/rendez"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:text="Prendre rendez-vous" />
</GridLayout>